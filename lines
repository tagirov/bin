#!/bin/sh

#===================================================================================================================================#
#                                                                                                                                   #
#                                                      github.com/tagirov/shell                                                     #
#                                                                                                                                   #
#===================================================================================================================================#


## Exclude spaces
[ "$1" == "s" ] &&
	cat "$2" | sed '/^\s*$/d' | wc -l

## Exclude spaces and comments
[ "$1" == "sc" ] &&
	cat "$2" | sed '/^\s*#/d;/^\s*$/d' | wc -l
